<odoo>
    <data noupdate="1">

        <!-- Sequences for sale.order -->
        <record id="seq_patient" model="ir.sequence">
            <field name="name">Patients</field>
            <field name="code">hospital.patient.sequence</field>
            <field name="prefix">P#</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>
        <record id="seq_appointment" model="ir.sequence">
            <field name="name">appointment</field>
            <field name="code">hospital.appointment.sequence</field>
            <field name="prefix">AP#</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

    </data>
</odoo>